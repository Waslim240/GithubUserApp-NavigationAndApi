<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="componentText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="TextName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/cyan_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="ButtonShare">
        <item name="android:width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:drawableStart">@drawable/ic_baseline_share_24</item>
        <item name="android:text">@string/share</item>
    </style>
</resources>